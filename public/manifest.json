{
  "manifest_version": 3,
  "name": "Horizon New Tab",
  "version": "0.1.0",
  "description": "Beautiful new tab page with focus tools, weather, and daily inspiration",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.open-meteo.com/*",
    "https://api.pexels.com/*",
    "https://api.quotable.io/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
